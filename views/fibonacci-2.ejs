    <title>Document</title>
</head>

<body>
    <div class="topo">
        <p class="data">
            Você atualizou essa página: <%= new Date(); %>
        </p>
        <h1>
            <%= titulo %>
        </h1>
        <p class="autoria"> Por Luiza Pires Gonzalez</p>
        <div class="cabecalho">
            <div class="einstein">
                <img class="einsteinImg" src="img/einstein.png" alt="desenho de Einstein">
            </div>
            <div class="comentarios">
                <p class="comentario">Escolha a função que deseja utilizar</p>
            </div>
            <div class="home">
                <div class="homeInt">
                    <a href="/">
                        <p>HOME</p>
                    </a>
                </div>
            </div>
            <div class="contagem">
                <div class="contagemInt">
                    <a href="contagem">
                        <p>CONTAGEM</p>
                    </a>
                </div>
            </div>
            <div class="maxdivcomum">
                <div class="maxdivcomumInt">
                    <a href="mdc">
                        <p>MDC</p>
                    </a>
                </div>
            </div>
            <div class="ordenacao">
                <div class="ordenacaoInt">
                    <a href="ordenada">
                        <p>ORDENAÇÃO</p>
                    </a>
                </div>
            </div>
            <div class="primos">
                <div class="primosInt">
                    <a href="primos">
                        <p>NÚM. PRIMOS</p>
                    </a>
                </div>
            </div>
            <div class="somatorio">
                <div class="somatorioInt">
                    <a href="somatorio">
                        <p>SOMATÓRIO</p>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="borda"></div>

    <div class="form">
        <p class="formulario">
            Preencha para encontrar o que você procura
        </p>
        <form method="POST" action="/soma" autocomplete="off">
            <input name="a" type="text" />
            <input name="b" type="text" />
            <button type="submit">Enviar</button>
        </form>

        <form method="POST" action="/subtrae">
            <input name="a" type="text" />
            <input name="b" type="text" />
            <button type="submit">Enviar</button>
        </form>
    </div>

</body>

</html>